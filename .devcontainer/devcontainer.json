{
    "name": "MCP Server Development",
    "dockerComposeFile": ["docker-compose-mcp-server-poc.yml"],
    "service": "mcp-server",
    "workspaceFolder": "/workspaces/ai-learning/mcp-server-poc",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-containers",
                "ms-azuretools.vscode-docker",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-vscode.vscode-typescript-next"
            ]
        }
    },
    "forwardPorts": [3000, 5432],
    "postCreateCommand": "cd /workspaces/ai-learning/mcp-server-poc && npm install",
    "postStartCommand": "echo 'ðŸš€ Dev container started successfully!'",
    "remoteUser": "node"
}
